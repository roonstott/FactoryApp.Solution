@{
  Layout = "_Layout";
}

@using Factory.Models

@if(Model.Count == 0)
{
  <p>There aren't any machines</p>
}
@if(Model.Count > 0)
{
  <ul>
    @foreach(Machine machine in Model)
    {
      <li>
        @Html.ActionLink(@machine.Name, "Details", new { id = machine.MachineId, showForm = false})
      </li>
    }
  </ul>
}

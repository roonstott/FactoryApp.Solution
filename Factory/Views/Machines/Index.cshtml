@{
  Layout = "_Layout";
}

@using Factory.Models
<h2>Machines</h2>
@if(Model.Count == 0)
{
  <p>There aren't any machines</p>
}

@if(Model.Count > 0)
{
  @foreach(Machine machine in Model)
  {
    <div class="row">      
      @Html.ActionLink(machine.Name, "Details", new {id = machine.MachineId, showForm = false, showDelete = false})
    </div>
  }  
}
<button class="btn btn-success">@Html.ActionLink("Add A Machine", "Create", "Machines")</button>
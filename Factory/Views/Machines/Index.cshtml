@{
  Layout = "_Layout";
}

@using Factory.Models

<div class="card">    
  <h2 class="card-title">Machines</h2>
  <div class="card-body">
    @if(Model.Count == 0)
    {
      <p>There aren't any machines</p>
    }

    @if(Model.Count > 0)
    {
      @foreach(Machine machine in Model)
      {
        <div class="row" id="list">      
          @Html.ActionLink(machine.Name, "Details", new {id = machine.MachineId, showForm = false, showDelete = false})
        </div>
      }  
    }
    <button class="btn btn-light">@Html.ActionLink("Add A Machine", "Create", "Machines")</button>
  </div>
</div>
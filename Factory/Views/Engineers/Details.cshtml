@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Engineer

<h3>@Model.Name</h3>

<h4>Authorized Machines</h4>

@if (Model.JoinEntities.Count == 0)
{
  <p>Not Authorized To Work On Any Machines</p>
}

@if (Model.JoinEntities.Count > 0)
{
  @foreach(EngineerMachine join in Model.JoinEntities)
  {
    <div class="row">
      <div class="col-8">
        <p>@join.Machine.Name</p>
      </div>
      <div class="col-4">
        @using(Html.BeginForm("DeleteJoin", "Engineers"))
        {
          @Html.Hidden("joinId", join.EngineerMachineId)
          @Html.Hidden("eId", Model.EngineerId)            
          <input type="submit" value="X">
        }
      </div>
    </div>    
  }
}

@if (@ViewBag.ShowForm == false && ViewBag.ShowDelete == false) 
{
  <button class="btn btn-success">@Html.ActionLink("Add A Machiine", "Details", new { id = Model.EngineerId, showForm = true, showDelete = false})</button>
  <button class="btn btn-danger">@Html.ActionLink($"Remove {@Model.Name}", "Details", new { id = Model.EngineerId, showForm = false, showDelete = true})</button>
}

@if (@ViewBag.ShowForm == true) 
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)
    @Html.Label("Select Machine")
    @Html.DropDownList("MachineId")
    <button type="submit" class="btn btn-success">Add Machine</button>
  }
}

@if (@ViewBag.ShowDelete == true)
{
  @using (Html.BeginForm("Delete", "Engineers"))
  {
    <p>Are you sure that you want to remove @Model.Name</p>
    @Html.Hidden("id", Model.EngineerId)
    <button type="submit" class="btn btn-danger">Remove @Model.Name</button>
  }
}

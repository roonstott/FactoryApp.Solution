@{
  Layout = "_Layout";
}

@using Factory.Models

@if(Model.Count == 0)
{
  <p>There aren't any engineers</p>
}
@if(Model.Count > 0)
{
  <ul>
    @foreach(Engineer engineer in Model)
    {
      <li>
        @Html.ActionLink(engineer.Name, "Details", new { id = engineer.EngineerId, showForm = false})
      </li>
    }
  </ul>
}

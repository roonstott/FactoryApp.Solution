@{
  Layout = "_Layout";
}

@using Factory.Models
<h2>Engineers</h2>

@if(Model.Count == 0)
{
  <p>There aren't any engineers</p>
}
@if(Model.Count > 0)
{
  @foreach(Engineer engineer in Model)
  {
    <div class="row">      
      @Html.ActionLink(engineer.Name, "Details", new {id = engineer.EngineerId, showForm = false, showDelete = false})
    </div>
  }    
}

<br>
<button class="btn btn-success">@Html.ActionLink("Add An Engineer", "Create", "Engineers")</button>
<br>

@{
  Layout = "_Layout";
}

@using Factory.Models

<div class="card">    
  <h2 class="card-title">Engineers</h2>
  <div class="card-body">
    @if(Model.Count == 0)
    {
      <p>There aren't any engineers</p>
    }
    @if(Model.Count > 0)
    {
      @foreach(Engineer engineer in Model)
      {
        <div class="row" id="list">      
          @Html.ActionLink(engineer.Name, "Details", new {id = engineer.EngineerId, showForm = false, showDelete = false})
        </div>
      }    
    }

    <br>
    <button class="btn btn-light">@Html.ActionLink("Add An Engineer", "Create", "Engineers")</button>
    <br>
  </div>
</div>
